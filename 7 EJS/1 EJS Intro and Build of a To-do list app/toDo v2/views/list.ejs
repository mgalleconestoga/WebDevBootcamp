<%- include('header'); -%>

    <div class="box" id="heading">
        <h1> <%=dayOfWeek %> To-do List</h1>
    </div>
    <div class="box">
        <% if(myList.length > 0) {                                  %>
        <%      for(var i=0; i < myList.length; i++) {              %>
                      <div class="item">
                        <input type="checkbox">
                        <p><%=myList[i] %></p>
                      </div>      
        <%      }                                                   %>
        <% }                                                        %>  
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New item">
            <button type="submit">+</button> 
        </form>   
    </div>
   
<%- include('footer'); -%>

